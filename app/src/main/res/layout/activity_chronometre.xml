<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChronometreActivity">

    <TextView
            android:text="@string/_0_0_0_000"
            android:layout_width="217dp"
            android:layout_height="77dp" android:id="@+id/chrono"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="104dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" android:textSize="36sp"/>
    <ImageButton
            android:layout_width="183dp"
            android:layout_height="172dp"
            android:id="@+id/playStop"
            android:layout_marginTop="136dp"
            app:layout_constraintTop_toBottomOf="@+id/chrono" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp" android:scaleType="center"
            android:contentDescription="@string/playStop" android:background="@drawable/play"/>
</androidx.constraintlayout.widget.ConstraintLayout>